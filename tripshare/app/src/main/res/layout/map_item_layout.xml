<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/topDivider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:dividerThickness="1dp"
        android:layout_marginHorizontal="@dimen/margin_padding_size_medium"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_padding_size_small"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/map_item_background"
        android:padding="@dimen/margin_padding_size_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:id="@+id/reviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/locationPosition"
                    android:layout_width="?minTouchTargetSize"
                    android:layout_height="?minTouchTargetSize"
                    android:background="@drawable/ic_baseline_location_24"
                    android:textColor="@color/white"
                    android:gravity="top|center_horizontal"
                    android:paddingTop="@dimen/margin_padding_size_small"
                    android:text="1"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginHorizontal="@dimen/margin_padding_size_small"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationName"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    tools:text="@tools:sample/lorem/random"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/margin_padding_size_small"
                    >
                    <ImageView
                        android:id="@+id/locationPhoto"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/vinhhalong"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <EditText
                android:id="@+id/locationNote"
                android:paddingVertical="@dimen/margin_padding_size_medium"
                android:paddingHorizontal="@dimen/margin_padding_size_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:minLines="1"
                android:ellipsize="end"
                tools:text="@tools:sample/lorem"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_padding_size_small"
            app:layout_constraintTop_toBottomOf="@id/reviewLayout"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View on map"
                android:id="@+id/viewOnMap"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/removeLocation"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/ic_baseline_delete_outline_24"
                />
        </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
