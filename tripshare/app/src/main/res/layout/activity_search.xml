<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.search.Search"
    android:paddingHorizontal="@dimen/margin_padding_size_medium"
    android:orientation="vertical"
    android:gravity="top"
    android:background="?attr/colorOnPrimary">
    <TextView
        android:id="@+id/notification_no_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        />
    <ListView
        android:id="@+id/suggest_search_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/suggest_search_component"
        android:visibility="gone"
        />
    <ListView
        android:id="@+id/suggest_search_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/suggest_search_component"
        android:visibility="gone"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResultsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/suggest_search_component"
        tools:itemCount="2"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>