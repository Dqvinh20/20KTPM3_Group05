<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:background="@drawable/vinhhalong"/>

    <TextView
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Plan your next adventure"
        android:layout_alignParentStart="true"
        android:layout_above="@id/createtripButton"
        android:layout_marginLeft="20dp"
        />
    <Button

        android:id="@+id/createtripButton"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="Create new trip plan"
        android:background="@drawable/round_outline"
        android:textAllCaps="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:theme="@style/Button.Black"/>
</RelativeLayout>