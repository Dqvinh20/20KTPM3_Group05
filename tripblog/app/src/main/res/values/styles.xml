<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <style name="MainTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">
            26sp
        </item>
    </style>

    <style name="RoundImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="backgroundTint">@android:color/white</item>
    </style>

    <style name="CircleAvatar">
        <item name="cornerSize">50%</item>
    </style>

    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="SubHeading" parent="TextAppearance.AppCompat.Body1">
        <item name="color">
            @color/black
        </item>
        <item name="android:textStyle">
            bold
        </item>
    </style>

    <style name="FormInputBox">
        <item name="android:layout_marginVertical">
            4dp
        </item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">
            72dp
        </item>
        <item name="android:minHeight">
            52dp
        </item>
        <item name="android:paddingHorizontal">
            16dp
        </item>
        <item name="android:paddingVertical">
            8dp
        </item>
        <item name="android:background">
            @drawable/form_border
        </item>
    </style>

    <style name="FormButton" parent="Widget.AppCompat.Button">
        <item name="android:background">
            @drawable/form_button_background
        </item>
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:layout_gravity">
            center
        </item>
        <item name="android:paddingHorizontal" >
            60dp
        </item>
        <item name="android:paddingVertical" >
            6dp
        </item>
    </style>

    <style name="RoundButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">40dp</item>
    </style>

    <!-- Post detail   -->
    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="Theme.Tripblog">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <!-- Widget.Tripblog.BottomAppBar -->
    <style name="Widget.Tripblog.PostDetail.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="backgroundTint">@color/quantum_white_100</item>
        <item name="contentInsetEnd">8dp</item>
        <item name="contentInsetEndWithActions">8dp</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="Widget.Tripblog.PostDetail.BottomAppBar.Button" parent="@style/Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="iconTint">?attr/colorOnSurface</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:stateListAnimator">@animator/button_scale_animator</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.LabelSmall</item>
    </style>

    <!-- Widget.Tripblog.BottomAppBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>
    <style name="Widget.Tripblog.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="compatShadowEnabled">true</item>
        <item name="backgroundTint">@color/quantum_white_100</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.Tripblog.BottomNavigationView.ActiveIndicator</item>
        <item name="addElevationShadow">true</item>
    </style>

    <style name="Widget.Tripblog.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="Widget.Tripblog.CreatePostButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.Button</item>
        <item name="iconSize">40dp</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="Widget.Tripblog.GoldenRatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressTint">@color/quantum_yellow</item>
        <item name="android:secondaryProgressTint">@android:color/transparent</item>
    </style>
</resources>