<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.fragments.OverviewFragment"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >

    <com.google.android.material.card.MaterialCardView
        style="?attr/materialCardViewElevatedStyle"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardElevation="2dp"
        android:id="@+id/briefDescriptionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentPaddingTop="@dimen/content_item_padding_horizontal"
        app:contentPaddingBottom="@dimen/content_item_padding_horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
            android:id="@+id/briefDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brief Description"
            android:paddingHorizontal="@dimen/content_item_padding_horizontal"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            />

        <EditText
            android:id="@id/briefDescription"
            android:maxLength="1000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/briefDescriptionTitle"
            android:gravity="start"
            android:textAlignment="gravity"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:background="@drawable/post_detail_edit_text_bg"
            android:hint="@string/brief_description_hint"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            android:layout_marginHorizontal="8dp"
            tools:text="@tools:sample/lorem/random"
            />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:visibility="gone"
        android:id="@+id/reviewLayout"
        style="?attr/materialCardViewElevatedStyle"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/briefDescriptionLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:contentPaddingTop="@dimen/content_item_padding_horizontal"
        app:contentPaddingBottom="@dimen/content_item_padding_horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:clickable="true"
                android:id="@+id/reviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:drawableEnd="@drawable/ic_baseline_arrow_left_24"
                android:paddingHorizontal="@dimen/content_item_padding_horizontal"
                android:text="Reviews"
                android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                android:textStyle="bold"
                android:stateListAnimator="@animator/button_scale_animator"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reviewExpandableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/reviewTitle"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/avgPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="4.0"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    />

                <RatingBar
                    style="@style/Widget.Tripblog.GoldenRatingBar"
                    android:id="@+id/avgRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/avgPoint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:stepSize="0.1"
                    android:rating="2"
                    android:isIndicator="true"
                    />

                <TextView
                    android:id="@+id/ratingCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/avgRatingBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginVertical="8dp"
                    android:text="based on 23 reviews"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_marginHorizontal="@dimen/content_item_padding_horizontal"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:id="@+id/writeYourReviewBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ratingCount"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Write a review"
                    android:layout_marginVertical="16dp"
                    />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/writeYourReviewBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="@dimen/content_item_padding_horizontal"
                    android:layout_marginVertical="8dp"
                    />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ratingList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/rating_item_layout"
                        tools:itemCount="2"
                        app:layout_constraintTop_toBottomOf="@id/divider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_wrapBehaviorInParent="vertical_only"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

