<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="52dp"
    android:padding="@dimen/layout_padding"
    android:layout_gravity="center_vertical"
    android:gravity="start"
    tools:context=".ui.signup.SignupActivity"
    >
    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/app_logo_transparent"
        android:contentDescription="App Logo" />

    <TextView
        android:layout_marginTop="@dimen/auth_title_margin_top"
        android:layout_marginBottom="@dimen/auth_title_margin_bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        style="@style/MainTitleText"
        android:textAllCaps="true"
        android:text="@string/signup_title"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        app:startIconDrawable="@drawable/ic_baseline_email_24"
        android:id="@+id/editEmailLayout"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_background"
            android:id="@+id/editEmail"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        android:id="@+id/editPasswordLayout"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@color/design_default_color_background"
            android:id="@+id/editPassword"
            android:ems="10"
            android:hint="@string/password_hint"
            >

        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginBottom="@dimen/auth_item_margin_bottom"
        android:id="@+id/loginBtn"

        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="@string/signup_title" />
</LinearLayout>