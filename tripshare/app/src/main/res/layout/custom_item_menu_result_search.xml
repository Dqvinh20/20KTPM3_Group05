<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >
<!--    android:layout_marginRight="10dp"-->

    <!--    android:paddingTop="2dp"-->
<!--    android:paddingLeft="8dp"-->
<!--    android:paddingRight="8dp"-->
<!--    <ImageView-->
<!--        android:layout_width="24dp"-->
<!--        android:layout_height="24dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:background="@android:drawable/ic_search_category_default"/>-->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:contentPaddingLeft="@dimen/margin_padding_size_small"
        app:contentPaddingRight="@dimen/margin_padding_size_small"
        app:contentPaddingTop="@dimen/margin_padding_size_small"
        app:contentPaddingBottom="@dimen/margin_padding_size_small"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/quantum_grey300"
        app:cardCornerRadius="@dimen/margin_padding_size_small"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <TextView
            android:drawableStart="@drawable/quantum_ic_search_grey600_24"
            android:drawablePadding="@dimen/margin_padding_size_small"
            android:id="@+id/hint_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/quantum_black_text"
            tools:text="@tools:sample/lorem/random"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            />
      </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>