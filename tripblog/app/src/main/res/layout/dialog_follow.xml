<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.FollowDialogFragment"
    android:orientation="vertical"
    android:id="@+id/dialogLayout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            android:layout_width="?minTouchTargetSize"
            android:layout_height="match_parent"
            style="@style/Widget.Material3.Button.IconButton"
            app:iconTint="@color/quantum_grey600"
            app:icon="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/nameTxt"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/quantum_grey800"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:textStyle="bold"
            />
        <Space
            android:layout_width="?minTouchTargetSize"
            android:layout_height="match_parent"
            style="@style/Widget.Material3.Button.IconButton"
            />
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabMode="scrollable"
        app:tabTextColor="@color/quantum_grey600"
        app:tabIndicatorColor="@color/quantum_orange800"
        app:tabSelectedTextColor="@color/quantum_orange800"/>

    <androidx.viewpager2.widget.ViewPager2
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollIndicators="bottom"
        />

</LinearLayout>